                            {% endfor %}
                        </ul>
                    </div>
                    <div class="threads-item__likes">
                        <span>{{ threadItem.likes }}</span>
                    </div>
                    <div class="threads-item__replies">
                        <span>{{ threadItem.replies }}</span>
                    </div>
                    <div class="threads-item__views">
                        <span>{{ threadItem.views }}</span>
                    </div>
                    <div class="threads-item__activity">
                        <span>{{ threadItem.activity }}</span>
                    </div>
                </div>
